<% posts.forEach(function(post) { %>

  <div class="post">
    <h3><b>TITLE : <a  href="/posts/<%= post.Title %>"><%= post.Title %></a></b></h3>
    <p>
      <%= post.Content.substr(0, 100).concat(" ....") %>
      <br>
      <a class="btn btn-sm btn-info stretched-link" href="/posts/<%= post.Title %>">Read More</a>
